<%= form_for @pair, :html => { :class => "form-horizontal pair" } do |f| %>

  <% if @pair.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@pair.errors.count, "error") %> prohibited this pair from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pair.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :members, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select(:member1, Member.all, :id, :name) %>
    </div>
    <div class="col-lg-10">
      <%= f.collection_select(:member2, Member.all, :id, :name) %>
    </div>
    <%=f.error_span(:members) %>
  </div>
  <div class="form-group">
    <%= f.label :details, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :details, :class => 'form-control' %>
    </div>
  </div>
    <%=f.error_span(:details) %>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pairs_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
